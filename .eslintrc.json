{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "flowtype"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": 0,
        "space-unary-ops": 0,
        "import/no-extraneous-dependencies": 0,
        "no-new": 0,
        "no-global-assign": 0,
        "no-unsafe-negation": 0,
        "import/no-named-as-default": 0,
        "import/no-named-as-default-member": 0,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "class-methods-use-this": 0,
        "no-bitwise": 0
    }
}
